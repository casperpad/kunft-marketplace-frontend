{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "target": "es5",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./packages/uikit/**/*.ts",
    "./packages/uikit/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}

